{
  "schema": {
    "https://strapi.hieunguyen.dev/graphql/": {}
  },
  "documents": [
    {
      "./framework/strapi/**/*.{ts,tsx}": {
        "noRequire": true
      }
    }
  ],
  "generates": {
    "./framework/strapi/schema.d.ts": {
      "plugins": [
        "typescript",
        "typescript-operations"
      ]
    },
    "./framework/strapi/schema.graphql": {
      "plugins": [
        "schema-ast"
      ]
    }
  },
  "hooks": {
    "afterAllFileWrite": [
      "prettier --write"
    ]
  }
}